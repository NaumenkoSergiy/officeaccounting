#moneyNew.modal.fade aria-hidden="true" aria-labelledby="basicModal" role="dialog" tabindex="-1"
  .modal-dialog
    .modal-content
      .modal-header
        .row
          .col.col-lg-12
            button.close aria-hidden="true" data-dismiss="modal" type="button"&times;
        .row
          .col.col-lg-4
            h4#myModalLabel.modal-title = t('money.documents')
          .col.col-lg-4
            h4#myModalLabel.modal-title = t('money.reports')
          .col.col-lg-4
            h4#myModalLabel.modal-title = t('money.references')
      .modal-body
        .row
          .col.col-lg-4
            = link_to t('buttons.income'), new_money_register_path(page: :income), remote: true, class: 'btn  btn-primary btn-modal'
            = link_to t('buttons.spending'), new_money_register_path(page: :costs), remote: true, class: 'btn  btn-primary btn-modal'
            = link_to t('buttons.expense_reports'), '#', class: 'btn  btn-primary btn-modal'
            = link_to t('buttons.buy_currency'), '#', class: 'btn  btn-primary btn-modal'
            = link_to t('buttons.currency_sale'), '#', class: 'btn  btn-primary btn-modal'
          .col.col-lg-4
            = link_to t('buttons.balances'), '#', class: 'btn  btn-primary btn-modal'
            = link_to t('buttons.statement_under_report'), '#', class: 'btn  btn-primary btn-modal'
          .col.col-lg-4
            = link_to t('buttons.accounts'), money_accounts_path, remote: true, class: 'btn  btn-primary btn-modal'
            = link_to t('buttons.—Åashier'), money_cashiers_path, remote: true, type: :get, class: 'btn  btn-primary btn-modal'
            = link_to t('buttons.banks'), money_banks_path(page: :banks), remote: true, class: 'btn  btn-primary btn-modal'
            = link_to t('buttons.currency'), money_currencies_path, remote: true, type: :get, class: 'btn  btn-primary btn-modal'
            = link_to t('buttons.exchange_rates'), money_exchange_rates_path, remote: true, type: :get, class: 'btn  btn-primary btn-modal'
            = link_to t('buttons.loans_borrowings'), money_credits_path, class: 'btn btn-primary btn-modal', remote: true
            = link_to t('buttons.money_movement'), money_articles_path, remote: true, type: :get, class: 'btn  btn-primary btn-modal'
