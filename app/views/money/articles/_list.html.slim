table.table
  tbody
    thead
      tr
        th
          = t('money.article_name')
    - @articles.each do |article|
      tr class='articles_#{ article.id }' value='#{ article.id }'
        td id='name'
          = link_to article.name, money_article_path(article), remote: true
        td
          = application_present.destroy_link money_article_path(article)
